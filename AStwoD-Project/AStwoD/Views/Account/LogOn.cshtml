@model AStwoD.Models.LogOnViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <title>LogOn</title>
</head>
<body>
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $("#wrapper").slideUp(0);
            $("#wrapper").slideDown(1000);
        });  
    </script>
    
    <div class="hero-unit" id="wrapper" style="width: 300px; padding:0 0 10px 0;">
        <div class="navbar navbar-inverse" style="position: static;">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar">
                    </span></a><a class="brand" href="#">AStwoD - Control Panel</a>
            </div>
        </div>
    </div>
 
        @using (Html.BeginForm())
        {
            <div style="margin: 0 auto; width: 230px;">
            @Html.ValidationSummary(true)
            @Html.EditorForModel()
                <center><input type="submit" class="btn btn-inverse" value="Войти" /></center>
            </div>
        }
    </div>
</body>
</html>
