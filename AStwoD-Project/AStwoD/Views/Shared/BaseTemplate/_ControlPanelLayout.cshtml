                    url: "@Url.Action("Index")",
                    data: { "Title": title },
                    cache: false,
                    success: function (response) {
                        console.log(typeof (response));
                        if (typeof (response) === 'object') {
                            for (var i in response) {
                                $("#resSearch").prepend("<a href=/" + response[i].LabelForURL + "><li>" + response[i].Title + "</li></a>");
                            }
                        }
                    }
                });
                return false;
            });
